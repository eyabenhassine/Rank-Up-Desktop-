<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<?import java.net.URL?>
<GridPane fx:id="eventGrid" xmlns:fx="http://javafx.com/fxml" fx:controller="tn.esprit.controllers.AfficherEClient"
          alignment="CENTER" hgap="10" vgap="10" style="-fx-padding: 20px;">
    <stylesheets>
        <URL value="@css/AfficherEClient.css" />
    </stylesheets>

    <!-- Définir un conteneur pour chaque événement -->
    <VBox GridPane.columnIndex="0" GridPane.rowIndex="0">
        <Label fx:id="eventNameLabel" style="-fx-font-weight: bold;"/>
        <Label fx:id="eventDatesLabel"/>
        <Label fx:id="eventTypeLabel"/>
        <Button fx:id="detailsButton" text="Détails"/>
    </VBox>

    <!-- Ajouter d'autres conteneurs VBox pour chaque événement si nécessaire -->
</GridPane>
