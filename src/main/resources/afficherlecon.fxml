                  <TableColumn fx:id="nom_lecon" prefWidth="75.0" styleClass="textfield-design" text="nom_leçon" />
                  <TableColumn fx:id="url" prefWidth="75.0" styleClass="textfield-design " text="URL" />
                  <TableColumn fx:id="prix" prefWidth="75.0" styleClass="textfield-design" text="PRIX" />
                  <TableColumn fx:id="description" prefWidth="151.20003662109377" styleClass="textfield-design " text="description" />
               </columns>
            </TableView>

            <!-- Boutons stylés -->
            <Button layoutX="228.0" layoutY="330.0" onAction="#naviguerUpdate" style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-border-color: #8338ec; -fx-border-width: 2px;" text="Mettre à jour" />
            <Button layoutX="341.0" layoutY="330.0" onAction="#delete" style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-border-color: #8338ec; -fx-border-width: 2px;" text="Delete" />
            <Button layoutX="544.0" layoutY="330.0" mnemonicParsing="false" onAction="#naviguer" style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-border-color: #8338ec; -fx-border-width: 2px;" text="Exit" />
