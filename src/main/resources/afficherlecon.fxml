   <stylesheets>
      <URL value="@style.css" />
   </stylesheets>
   <children>
      <!-- Fond violet sombre -->
      <AnchorPane cache="true" cacheHint="SCALE_AND_ROTATE" prefHeight="400.0" prefWidth="694.0" stylesheets="@style.css">
         <children>
            <!-- Tableau des leçons -->
            <TableView fx:id="tableView" layoutX="32.0" layoutY="57.0" prefHeight="254.0" prefWidth="377.0" styleClass="table-view">
