            <Text fill="WHITE" fontSmoothingType="LCD" layoutX="32.0" layoutY="47.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Liste des leçons :">
               <font>
                  <Font name="Book Antiqua Italic" size="36.0" />
               </font>
            </Text>
            <ImageView fitHeight="68.0" fitWidth="90.0" layoutX="566.0" layoutY="1.0">
               <image>
                  <Image url="@img/logo1.png" />
               </image>
            </ImageView>
            <ImageView fitHeight="196.0" fitWidth="192.0" layoutX="448.0" layoutY="77.0">
               <image>
                  <Image url="@img/d3cde5fdd73e9aa3e8b1ac42ec4db8ca.png" />
               </image>
            </ImageView>
            <TextField fx:id="chercherlecon" layoutX="32.0" layoutY="330.0" nodeOrientation="LEFT_TO_RIGHT" onKeyPressed="#rechercherLecon" prefHeight="57.0" prefWidth="171.0" promptText="donner le nom/prix" styleClass="textfield-design" stylesheets="@style.css"  />
            <Button fx:id="PDF" layoutX="594.0" layoutY="330.0" mnemonicParsing="false" onAction="#generatePDF" style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-border-color: #8338ec; -fx-border-width: 2px;" text="PDF" />
         </children>
      </AnchorPane>
   </children>
