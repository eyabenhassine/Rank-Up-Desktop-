<AnchorPane prefHeight="404.0" prefWidth="676.0" style="-fx-background-color: #7c7c7c;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.rankup.controllers.ShowSubscriptionPlan">
    <AnchorPane layoutX="12.0" layoutY="-2.0">
        <fx:include source="adminbackground.fxml" />
      <VBox layoutX="260.0" layoutY="297.0" prefHeight="98.0" prefWidth="222.0" spacing="10">
         <children>
            <Label fx:id="selectedTypeLabel" prefHeight="46.0" prefWidth="95.0" text="Type :" textFill="WHITE">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label fx:id="selectedAdditionalInfoLabel" prefWidth="200.0" text="Additional Info: " textFill="WHITE">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label fx:id="selectedPriceLabel" prefHeight="29.0" prefWidth="86.0" text="Price: " textFill="WHITE">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
         </children>
      </VBox>
      <TableView fx:id="planTableView" layoutX="290.0" layoutY="81.0" prefHeight="216.0" prefWidth="386.0">
         <columns>
            <TableColumn fx:id="idColumn" prefWidth="28.0" text="ID">
               <cellValueFactory>
                  <PropertyValueFactory property="id" />
               </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="typeColumn" prefWidth="59.0" text="Type">
               <cellValueFactory>
                  <PropertyValueFactory property="type" />
               </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="priceColumn" prefWidth="57.60003662109375" text="Price">
               <cellValueFactory>
                  <PropertyValueFactory property="prix" />
               </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="additionalInfoColumn" prefWidth="240.0000061035156" text="Additional Info">
               <cellValueFactory>
                  <PropertyValueFactory property="additional_info" />
               </cellValueFactory>
            </TableColumn>
         </columns>
      </TableView>
      <Button layoutX="622.0" layoutY="301.0" mnemonicParsing="false" onAction="#updateSubscriptionPlan" prefHeight="26.0" prefWidth="50.0" style="-fx-background-color: #a53e76;" text="Update" textFill="WHITE">
         <font>
            <Font size="11.0" />
         </font>
      </Button>
      <Button layoutX="563.0" layoutY="301.0" mnemonicParsing="false" onAction="#deleteSubscriptionPlan" style="-fx-background-color: #a53e76;" text="Delete" textFill="WHITE" />
       <Label layoutX="176.0" layoutY="46.0" text="SUBSCRIPTION PLAN LIST !" textFill="WHITE">
           <font>
               <Font name="Barlow Condensed Black Italic" size="26.0" />
           </font>
       </Label>
    </AnchorPane>
    <AnchorPane layoutX="423.0" layoutY="18.0">
        <fx:include source="upperPanel.fxml" />
    </AnchorPane>
    <AnchorPane prefHeight="404.0" prefWidth="222.0">
        <children>
            <fx:include source="adminnavSlider.fxml" />
        </children>
    </AnchorPane>


